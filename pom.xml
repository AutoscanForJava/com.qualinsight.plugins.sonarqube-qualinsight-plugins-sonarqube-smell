<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.qualinsight.plugins.sonarqube</groupId>
    <artifactId>qualinsight-plugins-sonarqube-parent</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>qualinsight-plugins-sonarqube-wtf</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <description>Parent pom of QualInsight "What the fuck!" plugin for SonarQube and its companion Java api library.</description>
  <url>https://github.com/QualInsight/qualinsight-plugins-sonarqube-wtf</url>
  <organization>
    <url>http://www.qualinsight.com/</url>
    <name>QualInsight</name>
  </organization>
  <inceptionYear>2015</inceptionYear>
  <licenses>
    <license>
      <name>The GNU Lesser General Public License, Version 3.0</name>
      <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>pawlakm</id>
      <name>Michel Pawlak</name>
      <organization>QualInsight</organization>
      <organizationUrl>http://www.qualinsight.com/</organizationUrl>
      <roles>
        <role>Owner</role>
      </roles>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git@github.com:QualInsight/qualinsight-plugins-sonarqube-wtf.git</connection>
    <developerConnection>scm:git:git@github.com:QualInsight/qualinsight-plugins-sonarqube-wtf.git</developerConnection>
    <url>https://github.com/QualInsight/qualinsight-plugins-sonarqube-wtf.git</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <lib.version.qualinsight-plugins-sonarqube-wtf-api>${project.version}</lib.version.qualinsight-plugins-sonarqube-wtf-api>
    <lib.version.qualinsight-libs-sonarqube-test>1.0.2</lib.version.qualinsight-libs-sonarqube-test>
    <plugin.version.maven-dependency-plugin>2.10</plugin.version.maven-dependency-plugin>
  </properties>
  <modules>
    <module>internal</module>
    <module>api</module>
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.qualinsight.libs.sonarqube</groupId>
        <artifactId>qualinsight-libs-sonarqube-test</artifactId>
        <version>${lib.version.qualinsight-libs-sonarqube-test}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${plugin.version.maven-dependency-plugin}</version>
          <executions>
            <execution>
              <id>copy</id>
              <phase>test-compile</phase>
              <goals>
                <goal>copy</goal>
              </goals>
              <configuration>
                <artifactItems>
                  <artifactItem>
                    <groupId>com.qualinsight.plugins.sonarqube</groupId>
                    <artifactId>qualinsight-plugins-sonarqube-wtf-api</artifactId>
                    <version>${lib.version.qualinsight-plugins-sonarqube-wtf-api}</version>
                    <type>jar</type>
                  </artifactItem>
                </artifactItems>
                <outputDirectory>${project.build.directory}/test-jars</outputDirectory>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <packaging>pom</packaging>
  <name>SonarQube WTF! Plugin</name>
</project>
